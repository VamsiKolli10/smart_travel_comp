# Backend environment variables for Smart Travel Companion
# Copy to .env and adjust for your Firebase/Google/OpenRouter projects.

PORT=8000
NODE_ENV=development
FIRESTORE_PREFER_REST=true

# Provide either FIREBASE_ADMIN_CREDENTIALS (JSON/base64) or
# path to the credential file via GOOGLE_APPLICATION_CREDENTIALS.
FIREBASE_ADMIN_CREDENTIALS=
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/serviceAccountKey.json

# Firebase client config for using the Firebase JS SDK on the server (if needed)
FIREBASE_API_KEY=your_firebase_web_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=000000000000
FIREBASE_APP_ID=1:000000000000:web:abcdef123456

# External providers
GOOGLE_PLACES_API_KEY=your_google_places_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=gpt-4o-mini
