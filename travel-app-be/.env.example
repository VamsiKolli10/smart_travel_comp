# Backend environment variables for Smart Travel Companion
# Copy to .env and adjust for your Firebase/Google/OpenRouter projects.

APP_PORT=8000
NODE_ENV=development
FIRESTORE_PREFER_REST=true

# Provide either SERVICE_ACCOUNT_CREDENTIALS (preferred for Firebase Secrets),
# FIREBASE_ADMIN_CREDENTIALS (legacy), or path via GOOGLE_APPLICATION_CREDENTIALS.
SERVICE_ACCOUNT_CREDENTIALS=
FIREBASE_ADMIN_CREDENTIALS=
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/serviceAccountKey.json

# Firebase client config for using the Firebase JS SDK on the server (if needed)
FBAPP_API_KEY=your_firebase_web_api_key
FBAPP_AUTH_DOMAIN=your-project.firebaseapp.com
FBAPP_PROJECT_ID=your-project-id
FBAPP_STORAGE_BUCKET=your-project.appspot.com
FBAPP_MESSAGING_SENDER_ID=000000000000
FBAPP_APP_ID=1:000000000000:web:abcdef123456

# External providers
GOOGLE_PLACES_API_KEY=your_google_places_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=gpt-4o-mini
