# Backend environment variables for VoxTrail
# Copy to .env and adjust for your Firebase/Google/OpenRouter projects.

APP_PORT=8000
NODE_ENV=development
FIRESTORE_PREFER_REST=true

# Base64-encoded Firebase service account JSON. Required (no file fallback).
FB_ADMIN_CREDENTIALS=

# Firebase client config for using the Firebase JS SDK on the server (if needed)
FBAPP_API_KEY=your_firebase_web_api_key
FBAPP_AUTH_DOMAIN=your-project.firebaseapp.com
FBAPP_PROJECT_ID=your-project-id
FBAPP_STORAGE_BUCKET=your-project.appspot.com
FBAPP_MESSAGING_SENDER_ID=000000000000
FBAPP_APP_ID=1:000000000000:web:abcdef123456

# External providers
GOOGLE_PLACES_API_KEY=your_google_places_api_key
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=x-ai/grok-4.1-fast:free

# Security
REQUEST_SIGNING_SECRET=your_random_secret_string_here
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://yourdomain.com,https://www.yourdomain.com
REQUEST_BODY_LIMIT=256kb

# Rate limits + quotas
STAYS_PER_USER_PER_HOUR=60
STAYS_SEARCH_MAX_PER_IP=15
POI_PER_USER_PER_HOUR=120
PHRASEBOOK_MAX_REQUESTS_PER_HOUR=25
ITINERARY_MAX_REQUESTS_PER_HOUR=20
USAGE_ALERT_FALLBACK=500
